<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="5dp"
    app:cardElevation="4dp">
<RelativeLayout
 android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingLeft="10dp"
    android:paddingRight="10dp"
    android:paddingBottom="5dp"
    android:layout_marginTop="15dp"
    android:paddingTop="5dp">
    <de.hdodenhof.circleimageview.CircleImageView
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignParentStart="true"
        android:layout_marginTop="15dp"
        android:id="@+id/imgcomment"/>
    <TextView
        android:layout_toRightOf="@+id/imgcomment"
        android:id="@+id/comment_user"
        android:textStyle="normal|bold"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="15dp"
        android:text="Title"
        android:textColor="@color/textusecomment"
         />
    <TextView
        android:layout_toRightOf="@+id/imgcomment"
        android:layout_marginTop="5dp"
        android:id="@+id/comment_test"
        android:layout_below="@id/comment_user"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
        android:textSize="18sp"
        android:text="aHIhi"
        android:layout_marginLeft="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <Button
        android:layout_toRightOf="@+id/imgcomment"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:id="@+id/detele_comment"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/ic_delete_approved"
        android:layout_below="@+id/comment_test"/>
    <Button
        android:layout_toRightOf="@+id/detele_comment"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:id="@+id/edit_comment"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/ic_edit_comment"
        android:layout_below="@+id/comment_test"/>
    <TextView
        android:id="@+id/comment_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/edit_comment"
        android:layout_marginTop="10dp"
        android:text="Description"
        android:textColor="@color/colorTextName"
        android:layout_alignParentRight="true"
        android:textStyle="italic"
        android:textAppearance="?android:attr/textAppearanceSmall" />
</RelativeLayout>
</androidx.cardview.widget.CardView>
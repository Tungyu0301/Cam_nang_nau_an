<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activity.AddlistShoppingActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <com.google.android.material.appbar.AppBarLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:elevation="0dp"
            android:theme="@style/AppTheme.AppBarOverlay">

            <androidx.appcompat.widget.Toolbar
                android:id="@+id/toolbar_addlistshopping"
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                android:background="?attr/colorPrimary"
                app:popupTheme="@style/AppTheme.PopupOverlay" >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/them"
                    style="@style/TextAppearance.AppCompat.Widget.ActionBar.Title"
                    android:layout_gravity="center" />
            </androidx.appcompat.widget.Toolbar>

        </com.google.android.material.appbar.AppBarLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:weightSum="6">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="15dp"
                android:layout_marginTop="10dp">
                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawableLeft="@drawable/ic_edit_list_shopping"
                    android:id="@+id/bntluulailist"
                    android:text="@string/luulai"
                    android:drawablePadding="10dp"
                    android:textSize="18dp"
                    android:textStyle="bold"
                    android:textAllCaps="true"
                    android:textAlignment="center"
                    android:background="@null"
                    android:padding="10dp"
                    android:layout_marginLeft="5dp"
                    android:textColor="@color/textlist"/>

                <Button
                    android:layout_alignParentRight="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right"
                    android:drawableLeft="@drawable/ic_delete_list_shopping"
                    android:drawablePadding="10dp"
                    android:text="@string/dong"
                    android:textAllCaps="true"
                    android:textColor="@color/textlist"
                    android:background="@null"
                    android:textSize="18dp"
                    android:padding="10dp"
                    android:id="@+id/bntdonglist"
                    android:layout_marginRight="5dp"
                    android:textStyle="bold" />
                <View
                   android:layout_below="@+id/bntluulailist"
                    android:layout_marginTop="7dp"
                    android:layout_width="match_parent"
                    android:background="@color/grey_font"
                    android:layout_height="1dp"/>
            </RelativeLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="4">
            <androidx.core.widget.NestedScrollView
                android:layout_width="match_parent"
                android:id="@+id/ln"
                android:clipToPadding="false"
                android:layout_height="wrap_content"
                app:layout_behavior="@string/appbar_scrolling_view_behavior">
                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingLeft="15dp"
                    android:paddingRight="15dp"
                    tools:layout_editor_absoluteY="8dp"
                    tools:layout_editor_absoluteX="8dp">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="#000"
                        android:textStyle="bold"
                        android:textSize="17dp"
                        android:layout_marginBottom="10dp"
                        android:text="@string/tieude" />
                    <EditText
                        android:id="@+id/edittieude"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingLeft="7dp"
                        android:inputType="text"
                        android:layout_marginLeft="15dp"
                        android:background="@drawable/edittext_backgroud"
                        android:hint="@string/tieude" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="#000"
                        android:textStyle="bold"
                        android:textSize="17dp"
                        android:layout_marginBottom="10dp"
                        android:layout_marginTop="20dp"
                        android:text="@string/noidung" />
                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingLeft="7dp"
                        android:id="@+id/editnoidung"
                        android:layout_marginLeft="15dp"
                        android:background="@drawable/edittext_backgroud"
                        android:hint="@string/noidung" />
    </LinearLayout>
            </androidx.core.widget.NestedScrollView>
        </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="2">
        <View
            android:id="@+id/viewaccount"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="5dp"
            android:layout_width="match_parent"
            android:background="@color/grey_font"
            android:layout_height="1dp"/>
    </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
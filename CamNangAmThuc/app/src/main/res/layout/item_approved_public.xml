<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_gravity="center">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginEnd="25dp"
        android:layout_marginStart="25dp"
        android:layout_marginTop="20dp"
        android:paddingEnd="25dp"
        android:paddingStart="25dp"
        android:gravity="center"
        android:background="@drawable/backgroud_form"
        android:orientation="vertical">
        <Spinner
            android:id="@+id/spinerupdate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:entries="@array/namespheduyet"
            android:padding="10dp" />
        <Button
            android:id="@+id/btnupdateapproved"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dip"
            android:background="@color/bgre"
            android:text="@string/pheduyet"
            android:textAllCaps="false"
            android:textColor="@color/text_while"
            android:textSize="15dp"
            android:layout_marginBottom="50dp"
            />
    </LinearLayout>
</LinearLayout>